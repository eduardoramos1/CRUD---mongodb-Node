{{#each erros}}
    <div class="alert alert-danger">{{aviso}}</div>
{{/each}}
{{#if sucesso}}
    <div class="alert alert-success">{{sucesso.mensagem}}</div>
{{/if}}
<div class="card shadow border border-secondary rounded-0">
    <div class="card-body">
        <h1 class="my-3">Formul√°rio de Cadastro:</h1>
        <form action="/cadastrar" method="post">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control" required>
            <label for="senha">Senha:</label>
            <input type="password" name="senha" class="form-control" required>
            <label for="idade">Idade:</label>
            <input type="number" name="idade" class="form-control" required>
            <label for="cidade">Cidade:</label>
            <input type="text" name="cidade" class="form-control" required>
            <button type="submit" class="btn btn-success mt-4" >Cadastrar</button>
        </form>
    </div>
</div>